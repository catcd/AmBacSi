<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ahay.ambacsi.ui.profiles.CreateProfileClinicalCenterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Username:"
                android:id="@+id/textView"/>

            <EditText
                android:id="@+id/createClinicalCenterUsername"
                android:inputType="none"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:alpha="0.5"
                android:hint="Username"
                android:singleLine="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createClinicalCenterUsername"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:id="@+id/textView2"/>

            <EditText
                android:id="@+id/createClinicalCenterEmail"
                android:inputType="textEmailAddress"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:alpha="0.5"
                android:hint="Email"
                android:singleLine="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createClinicalCenterEmail"
                android:layout_marginTop="10dp"
                android:text="Name:"
                android:id="@+id/textView3"/>

            <EditText
                android:id="@+id/createClinicalCenterName"
                android:inputType="textPersonName"
                android:hint="Name"
                android:singleLine="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createClinicalCenterName"
                android:layout_marginTop="10dp"
                android:text="Type:"
                android:id="@+id/textView5"/>

            <EditText
                android:id="@+id/createClinicalCenterType"
                android:inputType="none"
                android:enabled="true"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:hint="@string/clinical_center_type"
                android:singleLine="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border.Dropdown"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createClinicalCenterType"
                android:layout_marginTop="10dp"
                android:text="Found year:"
                android:id="@+id/textView6"/>

            <EditText
                android:id="@+id/createClinicalCenterFoundYear"
                android:inputType="none"
                android:enabled="true"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:hint="@string/date_format"
                android:singleLine="true"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createClinicalCenterFoundYear"
                android:layout_marginTop="10dp"
                android:text="Tel:"
                android:id="@+id/textView7"/>

            <EditText
                android:id="@+id/createClinicalCenterTel"
                android:inputType="number"
                android:hint="Tel No."
                android:singleLine="true"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createClinicalCenterTel"
                android:layout_marginTop="10dp"
                android:text="Location:"
                android:id="@+id/textView8"/>

            <EditText
                android:id="@+id/createClinicalCenterLocation"
                android:inputType="text"
                android:hint="Location"
                android:singleLine="true"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Save"
                android:id="@+id/submit"
                android:layout_below="@+id/createClinicalCenterLocation"
                android:layout_alignRight="@+id/createClinicalCenterLocation"
                android:layout_alignEnd="@+id/createClinicalCenterLocation"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>