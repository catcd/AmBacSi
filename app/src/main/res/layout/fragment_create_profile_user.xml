<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="vn.ahaay.ambacsi.ui.profiles.CreateProfileUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Username:"
                android:id="@+id/textView"/>

            <EditText
                android:id="@+id/createUserUsername"
                android:inputType="none"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:alpha="0.5"
                android:hint="Username"
                android:singleLine="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createUserUsername"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:id="@+id/textView2"/>

            <EditText
                android:id="@+id/createUserEmail"
                android:inputType="textEmailAddress"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:alpha="0.5"
                android:hint="Email"
                android:singleLine="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createUserEmail"
                android:layout_marginTop="10dp"
                android:text="First name:"
                android:id="@+id/textView3"/>

            <EditText
                android:id="@+id/createUserFirstName"
                android:inputType="textPersonName"
                android:hint="First name"
                android:singleLine="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createUserFirstName"
                android:layout_marginTop="10dp"
                android:text="Last name:"
                android:id="@+id/textView4"/>

            <EditText
                android:id="@+id/createUserLastName"
                android:inputType="textPersonName"
                android:hint="Last name"
                android:singleLine="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createUserLastName"
                android:layout_marginTop="10dp"
                android:text="Gender:"
                android:id="@+id/textView5"/>

            <EditText
                android:id="@+id/createUserGender"
                android:inputType="none"
                android:enabled="true"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:hint="Gender"
                android:singleLine="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border.Dropdown"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createUserGender"
                android:layout_marginTop="10dp"
                android:text="Date of Birth:"
                android:id="@+id/textView6"/>

            <EditText
                android:id="@+id/createUserDob"
                android:inputType="none"
                android:enabled="true"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:hint="@string/date_format"
                android:singleLine="true"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="5dp"
                style="@style/AppStyle.Input.Border"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Save"
                android:id="@+id/submitCreateUser"
                android:layout_below="@+id/createUserDob"
                android:layout_alignRight="@+id/createUserDob"
                android:layout_alignEnd="@+id/createUserDob"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/progressBarCreateUser"
                android:layout_below="@+id/createUserDob"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
